---
const nav = [
    {
        name: "Home",
        path: "/",
    },
    {
        name: "Contact",
        path: "/contact",
    },
];
---

<nav class="grid col-span-12 row-start-1 row-end-2 items-center">
    <a href="/"
        ><p>Pixel<span class="text-gray-900 font-bold">Perfect</span></p></a
    >
    <ul class="flex col-start-8 col-end-12 justify-end gap-4">
        {
            nav.map((item) => (
                <li>
                    <a href={item.path}>{item.name}</a>
                </li>
            ))
        }
    </ul>
</nav>
