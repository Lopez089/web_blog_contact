        ? [
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-12",
          ]
        : articles.length === 7
        ? [
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-8",
          ]
        : articles.length === 8
        ? [
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-8",
              "col-span-12",
          ]
        : articles.length === 9
        ? [
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-8",
              "col-span-8",
              "col-span-4",
          ]
        : articles.length === 10 && [
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-4",
              "col-span-8",
              "col-span-4",
              "col-span-4",
              "col-span-4",
          ];
---

<section class="grid gap-4 grid-cols-12 gap-4 col-span-12">
    {
        articles.map((article, item) => (
            <Article
                title={article.title}
                author={article.author}
                img={article.img}
                col={column}
                item={item}
            />
        ))
    }
</section>
